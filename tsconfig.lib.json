{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "noEmit": false,
        "baseUrl": ".",
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
    },
    "include": [
        "src",
        "types",
        "vite.config.ts",
        "vite.config.js",
        "vite-env.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.stories.ts",
    ]
}